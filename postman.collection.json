          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"template_key\": \"welcome.user\", \"data\": {\"name\": \"Alice\"}, \"to\": [\"alice@example.com\"]}"
        },
        "url": {
          "raw": "{{base}}/api/{{prefix}}/messages",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "{{prefix}}",
            "messages"
          ]
        }
      },
      "response": []
    },
